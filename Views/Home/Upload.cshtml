@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .row {
            display: relative
        }

        .btn-warning {
            padding-right: 19px;
        }

        .btn.btn-warning.btn-upload {
            background-color: #00DBDE;
            background-image: linear-gradient(90deg, #00DBDE 0%, #FC00FF 100%);
            border-color: #00DBDE;
            color: #ffffffed;
        }

        .btn.btn-warning.btn-upload:hover {
            background-color: #00DBDE;
            background-image: linear-gradient(90deg, #00DBAE 0%, #FC00AF 100%);
            border-color: #00DBAE;
            color: #ffffffed;
        }

        .container.d-flex.justify-content-center {
            border: 3px solid violet;
            background-color: blanchedalmond;
            padding: 15px;
        }
    </style>
}

    <div class="container d-flex justify-content-center">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="Name">Input File</label>
                    <input type="file" name="file" />
                </div>
            </div>

            <div class="form-row d-flex justify-content-between">
                <input type="submit" value="Upload" class="btn btn-warning btn-upload" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            </div>
        </form>
    </div>


    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }